<% provide(:title, 'Crear mi cuenta') %>
<h1>Crear mi cuenta</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
  	  <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :nombre %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :pyme %>
      <%= f.text_field :pyme %>

      <%= f.label :contrasena %>
      <%= f.password_field :password %>

      <%= f.label :confirmar_contrasena, "Confirmacion" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Crear mi cuenta", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>